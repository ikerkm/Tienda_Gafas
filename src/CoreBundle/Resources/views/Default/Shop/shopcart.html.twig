{% extends 'basetemplate.html.twig' %}
{% block stylesheets %}
    <link href="{{asset('css/shopcart.css')}}" rel="stylesheet" type="text/css"/>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="{{asset('js/cartManager.js')}}" type="text/javascript"></script>
{% endblock %}
{% block body %}

    <div class="container">
        <table class="table table-hover table-condensed" id="cart">
            <thead>
                <tr>
                    <th style="width:50%">Product</th>
                    <th style="width:10%">Price</th>
                    <th style="width:8%">Quantity</th>
                    <th class="text-center" style="width:22%">Subtotal</th>
                    <th style="width:10%"></th>
                </tr>
            </thead>
            <tbody>
                {% if total != 0 %}
                    {% for glass in glasses %}
                        <tr>

                            <td data-th="Product">
                                <div class="row">
                                    <div class="col-sm-2 hidden-xs"><img alt="..." class="img-responsive" heigth="100px" width="100px" src="{{glass[0].imgRoute}}"/></div>
                                    <div class="col-sm-10">
                                        <h4 class="nomargin">{{glass[0].productName}}</h4>
                                        <p>{{glass[0].description}}</p>
                                    </div>
                                </div>
                            </td>
                            <td data-th="Price">${{glass[0].price}}</td>
                            <td data-th="Quantity" id="quantity">
                                <input class="form-control text-center quantity_product" type="number" value="{{glass[0].cartQuantity}}">
                            </td>

                            <td class="text-center" data-th="Subtotal">{{glass[0].subtotal}}</td>
                            <td class="actions" data-th="">

                                <button id_product="{{glass[0].id}}" class="btn btn-info btn-sm btn_refresh">
                                    <i class="fa fa-refresh"></i>
                                </button>

                                <button id_product="{{glass[0].id}}" class="btn btn-danger btn-sm btn_delete">
                                    <i class="fa fa-trash-o"></i>
                                </button>
                            </td>

                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </tr>
    </tbody>
    <tfoot>

        <tr>
            <td>
                <a class="btn btn-warning" href="{{ path('home')}}">
                    <i class="fa fa-angle-left"></i>
                    Continue Shopping</a>
            </td>
            <td class="hidden-xs" colspan="2"></td>
            <td class="hidden-xs text-center">
                <strong>Total
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    ${{total}}</strong>
            </td>
            <td>
                <a class="btn btn-success btn-block" href="#">Checkout
                    <i class="fa fa-angle-right"></i>
                </a>
            </td>
        </tr>
    </tfoot>
</tr></tfoot></table><h2>May interest you</h2><div class="may_interest">{% for glass in rand_glasses %}
<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <a href="{{ path('product_detail', {'id': glass.id}) }}"><img alt="" class="card-img-top" src="{{glass.imgRoute}}"></a>
        <div class="card-body">
            <h4 class="card-title">
                <a href="{{ path('product_detail', {'id': glass.id}) }}">{{glass.productName}}</a>
            </h4>
            <h5>${{glass.price}}</h5>
        </div>
        <div class="card-footer">
            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
        </div>
    </div>
</div>{% endfor %}</div></div>{% endblock %}

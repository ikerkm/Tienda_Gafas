{% extends 'basetemplate.html.twig' %}
{% block body %}

    <div
        class="container bootstrap snippet">

        <!--/col-3-->
        <div class="col-sm-9">


            <div class="tab-content">

                <div class="tab-pane active" id="home">

                    <hr>
                    {% if error_pass != null %}
                        <div class="alert alert-danger" role="alert">
                            {{error_pass}}
                        </div>

                    {% endif %}
                    {{ form_start(form) }}
                    <div class="form-group">

                        <div class="col-xs-6">
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-xs-6">
                            {{ form_row(form.name) }}
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                {{ form_row(form.surname) }}
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="email">
                                    <h4>Verify</h4>
                                </label>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                {{ form_row(form.plainPassword.first) }}
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-xs-6">
                                {{ form_row(form.plainPassword.second) }}
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit">
                                    <i class="glyphicon glyphicon-ok-sign"></i>
                                    Save</button>

                            </div>
                        </div>
                        {{ form_end(form) }}


                    </div>
                    <!--/tab-pane-->


                </div>
                <!--/col-9-->
            </div>
        </div>
    </div>
    <!--/row-->
{% endblock %}
